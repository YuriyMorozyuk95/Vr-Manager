<Page x:Class="VrManager.Pages.ShowVideoListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:control="clr-namespace:VrManager.Controls"
      xmlns:local="clr-namespace:VrManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Unloaded="Page_Unloaded"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <control:VideoBoard Grid.Row="0" x:Name="VideoViewer" TileClick="VideoViewer_TileClick" MinHeight="815" Margin="10" HorizontalAlignment="Center" />
        <control:PagginationBox Grid.Row="2" x:Name="Paggination" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Page>
