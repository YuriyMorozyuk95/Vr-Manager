<Page x:Class="VrManager.View.TestServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VrManager.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Main Page">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10" />
            
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button Name="Start" Content="Start" Margin="10" Click="Start_Click"/>
            <Button Name="Exit" Content="Exit" Margin="10" Click="Exit_Click"/>
            <Button Name="Play" Content="Play" Margin="10" Click="Play_Click"/>             
            <Button Name="Pause" Content="Pause" Margin="10" Click="Pause_Click"/>
        </StackPanel>
    </Grid>
</Page>
